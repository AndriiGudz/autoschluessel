---
import type { WarumWirProps } from './WarumWir.types';
import styles from './WarumWir.module.css';

const { title, lang } = Astro.props as WarumWirProps;

// Встроенные данные о преимуществах с иконками
const features = [
    {
      title: "24/7-Service",
      description: "Unser Kundenservice-Team ist rund um die Uhr erreichbar, um Ihnen bei Fragen oder Anliegen zu helfen.",
      icon: "/images/icons/service.svg"
    },
    {
      title: "Ohne Termine",
      description: "Wir arbeiten vor Ort! teilen Sie uns die Adresse mit und wir kommen zu Ihnen.",
      icon: "/images/icons/appointment.svg"
    },
  {
    title: "Qualitätsreparatur",
    description: "Wir verwenden hochwertige Teile und bieten eine 6 - monatige Garantie auf alle Reparaturen.",
    icon: "/images/icons/quality.svg"
  },
  {
    title: "Geld sparen",
    description: "Lassen Sie Ihren Autoschlüssel zu einem Bruchteil der Kosten eines neuen reparieren.",
    icon: "/images/icons/money.svg"
  },
  {
    title: "Sicherheitsgarantie",
    description: "Ihre Daten sind bei uns sicher. Wir geben keine Informationen an Dritte weiter.",
    icon: "/images/icons/security.svg"
  },
  {
    title: "Keine versteckten Kosten",
    description: "Wir bieten transparente Preisgestaltung ohne versteckte Gebühren oder unerwartete Kosten.",
    icon: "/images/icons/transparency.svg"
  },
  {
    title: "Kostenlose Diagnose",
    description: "Wir bieten kostenlose Diagnoseleistungen an, um das Problem mit Ihrem Autoschlüssel zu identifizieren.",
    icon: "/images/icons/diagnosis.svg"
  },
  {
    title: "Große Produktvielfalt",
    description: "Wir reparieren eine Vielzahl von Autoschlüsselproblemen für verschiedene Automarken und -modelle.",
    icon: "/images/icons/variety.svg"
  }
];
---

<section class={styles.warumWir}>
  <!-- Заголовок -->
  <div class={styles.title}>
    <h3>{title}</h3>
  </div>
  
  <!-- Преимущества -->
  <div class={styles.features}>
    <div class={styles.container}>
      {features.map(feature => (
        <div class={styles.featureCard}>
          <div class={styles.iconContainer}>
            <img src={feature.icon} alt={feature.title} class={styles.icon} />
          </div>
          <h4>{feature.title}</h4>
          <p>{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 