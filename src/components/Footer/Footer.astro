---
import type { FooterProps } from './Footer.types';
import styles from './Footer.module.css';

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();

// Пути к иконкам социальных сетей
const socialIcons = {
  telegram: "/images/icons/Telegram.svg",
  whatsapp: "/images/icons/Whatsapp.svg",
  facebook: "/images/icons/Facebook.svg",
  instagram: "/images/icons/Instagram.svg" 
};
---

<footer class={styles.footer}>
  <div class={styles.footerContainer}>
  <div class={styles.separator}></div>
  <div class={styles.footerContent}>
    <div class={styles.contactInfo}>
      <div class={styles.footerHeading}>
        <h3>Kontakte</h3>
      </div>
      <div class={styles.contactDetails}>
        <p>Bitte kontaktieren Sie uns über WhatsApp und Telegram.</p>
        <p>+49 151 26135181</p>
        <p>Mon - Son: 24/7</p>
      </div>
    </div>
    <div class={styles.socialMedia}>
      <div class={styles.footerHeading}>
        <h3>Folgen Sie uns</h3>
      </div>
      <div class={styles.socialIcons}>
        <!-- Facebook (заглушка) -->
        <a href="#" class={styles.socialIcon} target="_blank" rel="noopener noreferrer">
          <img src={socialIcons.facebook} alt="Facebook" width="24" height="24" />
          <span class={styles.srOnly}>Facebook</span>
        </a>
        <!-- Instagram (заглушка) -->
        <a href="#" class={styles.socialIcon} target="_blank" rel="noopener noreferrer">
          <img src={socialIcons.instagram} alt="Instagram" width="24" height="24" />
          <span class={styles.srOnly}>Instagram</span>
        </a>
        <!-- Telegram -->
        <a href="#" class={styles.socialIcon} target="_blank" rel="noopener noreferrer">
          <img src={socialIcons.telegram} alt="Telegram" width="24" height="24" />
          <span class={styles.srOnly}>Telegram</span>
        </a>
        <!-- WhatsApp -->
        <a href="#" class={styles.socialIcon} target="_blank" rel="noopener noreferrer">
          <img src={socialIcons.whatsapp} alt="WhatsApp" width="24" height="24" />
          <span class={styles.srOnly}>WhatsApp</span>
        </a>
      </div>
    </div>
  </div>
  <div class={styles.separator}></div>
  <div class={styles.footerBottom}>
    <p><a href="#" class={styles.contactLink}>© MV_KFZ Autoschlüssell {currentYear}</a></p>
    <p><a href="https://gudz-andrii.com/" target="_blank" rel="noopener" class={styles.contactLink}>Design und Entwicklung von Andrii Gudz</a></p>
  </div>
  </div>
</footer> 