---
import { getTranslation } from '../i18n/useTranslation';
import SeoTags from '../components/SeoTags.astro';
import '../styles/global.css';
import type { TranslationSchema } from '../i18n/types';
import { languages } from '../i18n/config';

type LanguageKey = keyof typeof languages;

interface Props {
  title?: string;
  description?: string;
  lang: LanguageKey;
}

const { title, description, lang } = Astro.props;
const t = await getTranslation(lang) as TranslationSchema;
---

<html lang={lang}>
  <head>
    <SeoTags
      title={title}
      description={description}
      lang={lang}
      translations={t}
    />
    
    <!-- Preload hero image -->
    <link 
      rel="preload" 
      as="image" 
      href="/images/banner1.webp" 
      type="image/webp"
      fetchpriority="high"
    />
  </head>
  <body>
    <div class="wrapper">
      <slot />
    </div>
  </body>
</html>

<script is:inline define:vars={{ lang }}>
  window.translations = window.translations || {};
  window.currentLang = lang;
  
  if (!window.openOrderModal) {
    window.openOrderModal = function() {};
  }
  
  if (!window.openSuccessModal) {
    window.openSuccessModal = function() {};
  }
</script>

<style>
  .wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
</style>
