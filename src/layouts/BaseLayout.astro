---
interface Props {
  title: string;
  lang: string;
}

const { title, lang } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Car key repair services" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <div class="wrapper">
      <slot />
    </div>
  </body>
</html>

<style>
  .wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
</style>
