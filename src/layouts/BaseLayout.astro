---
interface Props {
  title: string;
  lang: string;
}

const { title, lang } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Car key repair services" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <div class="wrapper">
      <slot />
    </div>
  </body>
</html>

<script is:inline define:vars={{ lang }}>
  // Инициализация глобального объекта переводов и модальных окон
  window.translations = window.translations || {};
  window.currentLang = lang;
  
  // Создаем пустые функции-заглушки для модальных окон, чтобы избежать ошибок
  // до их загрузки
  if (!window.openOrderModal) {
    window.openOrderModal = function() {};
  }
  
  if (!window.openSuccessModal) {
    window.openSuccessModal = function() {};
  }
</script>

<style>
  .wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
</style>
